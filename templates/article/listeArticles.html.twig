{% extends 'base.html.twig' %}

{% block title %}Articles de mon super Blog{% endblock %}

{% block body %}
<h3>Liste des articles:</h3>
    <ul>
{% for art in article %}
    <li>
        <a href="{{ path ('afficher_article', { id : art.id }) }}">{{ art.titre }}</a>
    </li>
{% endfor %}
    </ul>
{% endblock %}