{% extends 'base.html.twig' %}

{% block title %}Articles de mon super Blog{% endblock %}

{% block body %}
    <h1>Mon super blog</h1>
    <div>
        <p>Exercice: Afficher le premier élément d’un tableau de string</p>
        <h3>{{titre_string}}</h3>
        {{tab_string|first}}
    </div>
    <div>
        <h3>Premiere lettre en majuscule: </h3>
        {% for item in tab_string %}
        {# Prend la 1ere lettre et la uppercase puis a l'aide de slice coupe le 
        reste de la string et le colle a la suite #}
            <li> {{item|first|upper}}{{item|slice(1,item|length)}}</li>
        {% endfor %}
    </div>
    <button class="btn-dark">
        <a class="nav-link" href="{{ path('detail', { numero: '1' }) }}">Voir l'article 1</a>
    </button>
        <button class="btn-dark">
        <a class="nav-link" href="{{ path('detail', { numero: '2' }) }}">Voir l'article 2</a>
    </button>
            <button class="btn-dark">
        <a class="nav-link" href="{{ path('detail', { numero: '3' }) }}">Voir l'article 3</a>
    </button>
{% endblock %}
